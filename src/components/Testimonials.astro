<style>
    #main {
        width: 80%;
        margin: 0 auto;
        padding: 1rem 0;
        color: #263528;
    }
    h1 {
        font-size: 3rem;
        margin: 0 0 0 2rem;
    }
    .item {
        display: flex;
        justify-content: space-between;
        margin: 1rem auto;
        padding: 2rem 0;
        width: 90%;
        border-bottom: 1px solid #263528;
        opacity: 0;
        transform: translateY(3rem);
        transition: 600ms;
    }
    .show {
        opacity: 1;
        transform: translate(0);
    }
    .item:last-of-type {
        border: none;
    }
    .img {
        width: 9rem;
        aspect-ratio: 1;
        border-radius: 4.5rem;
        background-color: #263528;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    img {
        width: 8rem;
        aspect-ratio: 1;
        border-radius: 4rem;
    }
    .text {
        display: flex;
        flex-direction: column;
        justify-content: center;
        flex-basis: 60%;
    }
    h2 {
        margin-top: 1rem;
        margin-left: 2rem;
    }
    p {
        font-weight: 300;
        letter-spacing: 1px;
        margin-left: 1rem;
    }
    @media (max-width: 33rem) {
        .item {
            flex-direction: column;
            align-items: center;
        }
        .img {
            margin-bottom: 1rem;
        }
        .reverse {
            flex-direction: column-reverse;
        }
    }
</style>

<script>
    const testyItem = document.querySelectorAll(".item");

    const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if (entry.isIntersecting) entry.target.classList.add("show");
        })
    },
    {
        threshold: 0.5,
    })

    testyItem.forEach(item => observer.observe(item));
</script>